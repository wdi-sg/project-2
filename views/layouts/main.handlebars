<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Tripcollab</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/images/favico.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheet/styles.css">
    <script defer src="https://use.fontawesome.com/releases/v5.0.2/js/all.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg" id="mainNav">
    <!-- <nav class="navbar navbar-expand-lg navbar-light fixed-top"> -->
    <!-- Brand -->
    <a class="navbar-brand" href="/">Tripcollab</a>
    <!-- Toggler/collapsibe Button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavCollapse">
      <span class="fas fa-bars"></span>
    </button>
    <div class="collapse navbar-collapse" id="mainNavCollapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item"><a class="nav-link" href="/"><span class="fas fa-home"></span> Home</a></li>
        <!-- <li class="nav-item"><a class="nav-link" href="#">Explore</a></li> -->
      </ul>
      <ul class="navbar-nav">
        {{#if currentUser}}
          <li class="nav-item"><a class="nav-link" href="/home"><span class="fas fa-user"></span> {{currentUser.userName}}</a></li>
          <li class="nav-item"><a class="nav-link" href="/auth/logout"><span class="fas fa-sign-out-alt"></span> Logout</a></li>
        {{else}}
          <li class="nav-item"><a class="nav-link" href="/auth/register"><span class="fas fa-user-plus"></span> Sign Up</a></li>
          <li class="nav-item"><a class="nav-link" href="/auth/login"><span class="fas fa-sign-in-alt"></span> Login</a></li>
        {{/if}}
      </ul>
    </div>
    </nav>
    {{#if errors}}
      {{#each errors as |e|}}
        <div class="alert alert-danger alert-dismissable fade show">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong>Error!</strong> {{e.msg}}
        </div>
      {{/each}}
    {{/if}}

    {{#if alerts.error}}
      {{#each alerts.error as |msg|}}
        <div class="alert alert-danger alert-dismissable fade show">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong>Error!</strong> {{msg}}
        </div>
      {{/each}}
    {{/if}}

    {{#if alerts.success}}
      {{#each alerts.success as |msg|}}
        <div class="alert alert-success alert-dismissable fade show">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong>Success!</strong> {{msg}}
        </div>
      {{/each}}
    {{/if}}
    {{{body}}}
  </body>
  <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js"></script> -->
  <!-- <script src="/socket.io/socket.io.js"></script> -->
  <!-- <script src="/javascript/script.js"></script> -->

</html>
