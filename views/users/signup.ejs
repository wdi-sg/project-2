<h1>your journey starts here.</h1>
<hr>

<% if (locals.flash.error) locals.flash.error.forEach(e => { %>
  <div class="alert alert-danger"><%= e.toString() %></div>
<% }) %>

<div class="well">
  <form action="/users/signup" method="post" accept-charset="utf-8">
    <label for="email">email</label>
    <div class="form-group">
      <input type="text" class="form-control" name="email" id="email">
    </div>
    <label for="name">name</label>
    <div class="form-group">
      <input type="text" class="form-control" name="name" id="name">
    </div>
    <label for="password">password</label>
    <div class="form-group">
      <input type="password" class="form-control" name="password" id="password">
    </div>
    <label for="passwordusers">verify password</label>
    <div class="form-group">
      <input type="password" class="form-control" name="passwordusers" id="passwordusers">
    </div>
    <button type="submit" class="btn btn-primary">submit</button>
  </form>
  <hr>
  <p>already have an account? <a href="/users/login">log in here.</a></p>
</div>
