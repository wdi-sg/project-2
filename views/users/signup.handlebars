<div class="row align-items-center justify-content-center">
  <div class="card" style="width:350px; margin-top: 30px">
  <div class="card-header">
    <h3>Sign Up!</h3>
  </div>

<div class="card-body">
  <div class="form-group">
<form enctype="multipart/form-data" action="/signup" method="post">
</div>
<div class="form-group">
  <label for="image">Profile Image* (required):</label>
      <input type="file" name="image" required>
 </div>
<div class="form-group">
  <label for="name">Name</label>
  <input type="text" name="name" placeholder="e.g. John Doe">
 </div>
<div class="form-group">
  <label for="email">Email</label>
  <input type="email" name="email" placeholder="e.g. domain@email.com">
 </div>
<div class="form-group">
  <label for="password">Password</label>
  <input type="password" name="password" placeholder="min. 8 characters">
</div>
  <button type="submit" name="button">Submit</button>
</form>
</div>
</div>
</div>
