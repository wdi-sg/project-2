<div class="container">
  <h2>Fixed Deposit</h2>

  <form class="col s12 m6" action="/fixed-deposit?_method=PUT" method="put">

    <label for="amount">I want to deposit $</label>
    <input type="amount" name="amount" class="black-text">

    <label for="period">over</label>
    <select name="period">
      <option value="1">1 month</option>,
      <option value="2">2 months</option>,
      <option value="3">3 months</option>,
      <option value="4">4 months</option>,
      <option value="5">5 months</option>,
      <option value="6">6 months</option>,
      <option value="7">7 months</option>,
      <option value="8">8 months</option>,
      <option value="9">9 months</option>,
      <option value="10">10 months</option>,
      <option value="11">11 months</option>,
      <option value="12">12 months</option>,
      <option value="13">13 months</option>,
      <option value="14">14 months</option>,
      <option value="15">15 months</option>,
      <option value="18">18 months</option>,
      <option value="24">24 months</option>,
      <option value="36">36 months</option>,
      <option value="48">48 months</option>,
      <option value="60">60 months</option>
    </select>

    <button class="btn waves-effect waves-light" type="submit" name="action">Calculate
      <i class="material-icons right"></i>
    </button>

  </form>

  <br>

  {{#each fixedDeposits as |FD|}}
    <div class="row">
      <div class="col s12">
        <b>{{FD.name}}</b>
      </div>
    </div>

    <div class="row">
      <div class="col s4"><img src="{{FD.bank_img}}" height="60"></div>
      <div class="col s4"><p>Interest: {{FD.interest}}</p></div>
      <div class="col s4"><p>Returns: {{FD.returns}}</p></div>
    </div>


      <div class="row">
        <ul class="collapsible" data-collapsible="accordion">
          <li>
            <div class="collapsible-header">More Details</div>
            <div class="collapsible-body"><span>
              <strong><h8>Period : Interest Rate</h8></strong>

              <ul>
                {{#each FD.interest_rate as |IR|}}
                  <li>{{IR.period}} month(s) : {{IR.rate}}%</li>
                {{/each}}
              </ul>

              <p><strong>Minimum Age: {{FD.minimum_age}}</strong></p>
              <p><strong>Minimum Deposit: $ {{FD.minimum_deposit.[0]}}</strong></p>
              <p><strong>Fees and Charges: {{FD.fees_charges}}</strong></p>
              </span></div>
          </li>
        </ul>
      </div>

      <br>

{{/each}}

  <br>
  <br>

</div>
