<div class = "container">
<h2 style="margin-top: 20px">Search Peeps</h2>
<label for="searchInput">Search: </label>
<input id="searchInput" type="text">

<div class = "container" style="margin-top: 20px">
<h3>Search Results</h3>
<div class="row" id="searchResults">
</div>
</div>

<div class="row" id="allPeople">

  {{#each peep}}
  <div class="col-8">
    <div class="card" style="margin-bottom: 20px">
      <div class="card-body">
        <img class="card-img-top" src="{{this.profileImg}}" alt="Card image cap">
        <h4 class="card-title">{{{this.name}}}</h4>
        <p class="card-text">
          {{this.profile.0.skills}}
          <a href="/profile/{{this.slug}}">Click!</a>
        </p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
</div>
